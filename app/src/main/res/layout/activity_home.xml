<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

  <!-- TOP BAR -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/topBar"
      android:layout_width="0dp"
      android:layout_height="54dp"
      android:paddingHorizontal="16dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/search_circle_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="#6B7280" />

    <LinearLayout
        android:id="@+id/titleBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Make home"
          android:textColor="#6B7280"
          android:textSize="12sp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="BEAUTIFUL"
          android:textStyle="bold"
          android:textColor="#111827"
          android:textSize="18sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cartContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

      <ImageView
          android:id="@+id/ivCartTop"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/cart_4_line_duotone"
          app:tint="#111827"/>

      <TextView
          android:id="@+id/tvCartBadge"
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:layout_gravity="end|top"
          android:gravity="center"
          android:background="@android:color/holo_red_dark"
          android:text="0"
          android:textColor="@android:color/white"
          android:textSize="10sp"
          android:visibility="gone"/>
    </FrameLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>


  <!-- PHẦN DANH MỤC + GRID SẢN PHẨM (copy từ fragment) -->
  <LinearLayout
      android:id="@+id/homeContent"
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/topBar"
      app:layout_constraintBottom_toTopOf="@id/bottomNav"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <!-- CATEGORIES -->
    <HorizontalScrollView
        android:id="@+id/hsCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="8dp">

      <LinearLayout
          android:id="@+id/catRow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingHorizontal="12dp"
          android:paddingVertical="6dp">

        <!-- Popular -->
        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="78dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_cat_chip"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/bg_cat_icon_selected"
              android:padding="8dp"
              app:tint="@android:color/white" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Popular"
              android:textStyle="bold"
              android:textSize="12sp"
              android:textColor="#111827"
              android:layout_marginTop="6dp"/>
        </LinearLayout>
        <!-- Chair -->
        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="78dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_cat_chip"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/bg_cat_icon_unselected"
              android:padding="8dp"
              android:src="@drawable/ic_chair"
              app:tint="#9CA3AF" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Chair"
              android:textSize="12sp"
              android:textColor="#6B7280"
              android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Table -->
        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="78dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_cat_chip"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/bg_cat_icon_unselected"
              android:padding="8dp"
              android:src="@drawable/ic_table"
              app:tint="#9CA3AF" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Table"
              android:textSize="12sp"
              android:textColor="#6B7280"
              android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Bed -->
        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="78dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_cat_chip"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/bg_cat_icon_unselected"
              android:padding="8dp"
              android:src="@drawable/ic_bed"
              app:tint="#9CA3AF" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Bed"
              android:textSize="12sp"
              android:textColor="#6B7280"
              android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Lamp -->
        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="78dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_cat_chip"
            android:padding="8dp">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/bg_cat_icon_unselected"
              android:padding="8dp"
              android:src="@drawable/ic_lamp"
              app:tint="#9CA3AF" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Lamp"
              android:textSize="12sp"
              android:textColor="#6B7280"
              android:layout_marginTop="6dp"/>
        </LinearLayout>
      </LinearLayout>
    </HorizontalScrollView>

    <!-- GRID PRODUCTS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>
  </LinearLayout>


  <!-- Bottom Navigation -->
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNav"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      app:itemIconTint="@color/bottom_nav_color"
      app:itemTextColor="@color/bottom_nav_color"
      app:menu="@menu/bottom_nav_menu"
      app:labelVisibilityMode="labeled"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
